{%- case media.media_type -%}
    {%- when "image" -%}
        <img class="w-full" src="{{ media | img_url:"master" }}" alt="{{ media.alt }}" />
        {%- when "video" -%}
            {{- media | video_tag:class:"w-full",controls:true }}
            {% comment %} // we can also use an other way for more customization  use sources array {% endcomment %}
        {%- when "external_video" -%}
            {% comment %} {{- media | external_video_tag:class:"w-full" }} {% endcomment %}
            <iframe width="100%" height="315" src="https://www.youtube.com/embed/{{ media.external_id }}?si=HT1-o0YqK6vSJtSK" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
        {%- when "model" -%}
            {{- media | model_viewer_tag }} 
           
    {%- else -%}
        
    {%- endcase -%}