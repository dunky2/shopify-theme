<div class="bg-white">
    <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900">rrrr</h2>
    
{%- paginate collections by 6 -%}
<div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
{% for collection in collections %}
    <div class="group relative">
      <a class="border border-gray-200 px-2 py-2 block" href="{{ collection.url }}">
      <img class="rounded-md" src="{{ collection.featured_image | img_url:"master" }}" />
      <h2 class="mt-3 text-lg flex justify-between"><span>{{ collection.title }}</span> <span>{{ collection.products_count }}</span></h2>
      </a>
    </div>
  {% endfor %}
</div>
  {% render 'pagination', paginate:paginate %}
{%- endpaginate -%}
</div>
</div>